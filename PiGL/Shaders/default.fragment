# version 330
in vec4 o_color;
in vec3 FragPos;
in vec3 Normal;

out vec4 out_color;

void main() {
    vec3 norm = normalize(Normal);
    vec3 lightDir = normalize(vec3(10, 0, 0) - FragPos);
    float diff = max(dot(norm, lightDir), 0.0);
    vec3 diffuse = diff * vec3(1.0);
    vec3 result = (vec3(0.1, 0.1, 0.1) + diffuse) * o_color.xyz;
    out_color = vec4(result, 1.0); //o_color;
}
